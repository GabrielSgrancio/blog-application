<!-- app/views/posts/index.html.erb -->
<div class="row">
  <div class="col-12">
    <h1>Posts Recentes</h1>

    <!-- Loop pelos posts -->
    <% @posts.each do |post| %>
      <div class="card mb-3">
        <div class="card-body">
          <h4><%= link_to post.title, post_path(post) %></h4>
          <p class="text-muted">
            Publicado em <%= post.created_at.strftime("%d/%m/%Y %H:%M") %>
            por <%= post.user.email if post.user %>
          </p>
        </div>
      </div>
    <% end %>

    <!-- Paginação -->
    <%= paginate @posts %>
  </div>
</div>