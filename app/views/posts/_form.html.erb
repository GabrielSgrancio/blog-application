<%= form_with(model: post, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "Conteúdo" %>
    <%= f.text_area :content, rows: 5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :tag_names, "Tags (separadas por vírgula)" %>
    <%= f.text_field :tag_names, value: post.tag_names, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>