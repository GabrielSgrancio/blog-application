<!DOCTYPE html>
<html>
  <head>
    <title>Meu Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Se quiser Bootstrap via CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- Se quiser seu próprio CSS -->
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <!-- Navbar de exemplo -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container">
        <a class="navbar-brand" href="<%= root_path %>">Gabriel Sgrancio</a>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ms-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Novo Post", new_post_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Editar Perfil", edit_user_registration_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
              <%= link_to "Logout", destroy_user_session_path,
              data: { turbo: "false" },
              method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Cadastrar", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <!-- Exibir mensagens flash -->
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <!-- Aqui vem o conteúdo específico de cada view -->
      <%= yield %>
    </div>

    <!-- JS do Bootstrap (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
